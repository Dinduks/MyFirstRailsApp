<table>

  <% if @products.empty? %>
    <tr>
      <td><%= t(:there_no_product) %></td>
    </tr>
  <% else %>

    <tr>
      <td><%=t :image %> </td>
      <td><%=t :title %> </td>
      <td><%=t :Price %> </td>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td>
          <a href="<%= product_path product.id %>">
            <img src="/uploads/articlesimages/<%= product.image %>" 
                 alt="<%= product.title %>" />
          </a>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= get_formatted_price product.price %> â‚¬
        </td>
        <% if user_signed_in? %>
          <td>
            <%= link_to product_commander_path product.id do %>
              <%= I18n.t :order %>
            <% end %>
          </td>
          <% if current_user.admin %>
            <td>
              <%= link_to edit_product_path product.id do %>
                <%= I18n.t :edit %>
              <% end %>
            </td>
            <td>
              <%= link_to product_path(product.id), :method => :delete do %>
                <%= I18n.t :remove %>
              <% end %>
            </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>

  <% end %>

</table>
